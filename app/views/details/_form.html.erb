<%= form_with(model: detail) do |form| %>
  <% if detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(detail.errors.count, "error") %> prohibited this detail from being saved:</h2>

      <ul>
        <% detail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, class:"form-control",placeholder:"Full name" %>
  </div>
<br>
  <div class="field">
    <%= form.number_field :phone_number, class:"form-control", placeholder:"Enter mobile num" %>
  </div>
<br>
  <div class="field">
    <%= form.text_field :occupation, class:"form-control", placeholder:"Occupation" %>
  </div>
<br>
  <div class="field">
    <%= form.text_field :byuser, value:  current_user.username, type: :hidden %>
  </div>
<br>  
  <div class="actions">
    <%= form.submit :submit, class:"btn btn-dark" %>
  </div>
<% end %>
