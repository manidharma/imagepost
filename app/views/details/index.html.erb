<% if user_signed_in? %>
<h1>Hi <%= current_user.username %></h1>
<h3>Personal info</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.name %></td>
        <td><%= detail.phone_number %></td>
        <td><%= detail.occupation %></td>
        <td><%= link_to 'Show', detail, class:"btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail), class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Detail', new_detail_path %>
<% else %>
<br>
<div class="card">
  <div class="card-header">
    please login first
  </div>
  <div class="card-body">
    <span> Login as <%= link_to 'Admin', new_admin_user_session_path, class:"btn btn-dark" %> || <%= link_to 'User', new_user_session_path, class:"btn btn-dark" %> </span>
  </div>
</div>
<% end %>
